{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.wasm",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/wasm"
                    }
                ]
            },
            {
                "source": "**/*",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=3600"
                    }
                ]
            }
        ]
    }
}